<config>
    <modules>
        <Mxperts_SkuRoute>
            <version>1.0.2</version>
            <depends>
                <Mage_Page />
            </depends>
        </Mxperts_SkuRoute>
    </modules>  
    
    <frontend>  
        <routers>  
             <SkuRoute>  
                 <use>standard</use>  
                 <args>  
                     <module>Mxperts_SkuRoute</module>  
                     <frontName>SkuRoute</frontName>  
                 </args>  
             </SkuRoute>  
        </routers>  
    </frontend>    
 
    <global>  
        <routers>  
            <cms>  
                <rewrite>  
                  <index>  
                    <to>Mxperts_SkuRoute/index</to>  
                    <override_actions>true</override_actions>  
                    <actions>  
                      <noroute><to> Mxperts_SkuRoute/index/noroute</to></noroute>  
                    </actions>  
                  </index>  
                </rewrite>  
            </cms>  
        </routers>      
    </global> 
    

</config>